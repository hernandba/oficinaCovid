@page
@model oficinaCovid.App.Frontend.Pages.ProveedorListModel
@{
    ViewData["Title"] = "Personal Proveedores";
}

<h2>Personal proveedores</h2>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <th>Identificación</th>
            <th>Nombre</th>
            <th>Empresa</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </thead>
        <tbody>
            @foreach (var proveedor in Model.proveedores)
            {
                <tr>
                    <td>@proveedor.identificacion</td>
                    <td>
                        <a asp-page="../Diagnostico/DiagnosticoList" asp-route-personaid="@proveedor.id">
                            @proveedor.nombres @proveedor.apellidos
                        </a>
                    </td>
                    <td>@proveedor.nombreEmpresa</td>
                    <td>
                        <a asp-page="./Proveedores" asp-route-proveedorid="@proveedor.id" class="btn btn-primary">
                            <i class="fas fa-edit" aria-hidden="true"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-page="./Eliminar" asp-route-proveedorid="@proveedor.id" class="btn btn-danger">
                            <i class="fas fa-trash-alt" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-page="./Proveedores" class="btn btn-success mt-2">Registrar</a>
