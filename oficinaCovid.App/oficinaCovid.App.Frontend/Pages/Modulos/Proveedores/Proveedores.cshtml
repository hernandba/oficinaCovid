@page
@model oficinaCovid.App.Frontend.Pages.ProveedoresModel
@{
}
<div class="col-md-8">
    <form action="" method="post">
        <input type="hidden" asp-for="proveedor.id">
        <div class="form-group">
            <label asp-for="proveedor.identificacion">Identificación</label>
            <input type="text" asp-for="proveedor.identificacion" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="proveedor.nombres">Nombres</label>
            <input type="text" asp-for="proveedor.nombres" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="proveedor.apellidos">Apellidos</label>
            <input type="text" asp-for="proveedor.apellidos" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="proveedor.edad">Edad</label>
            <input type="number" asp-for="proveedor.edad" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="proveedor.genero">Genero</label>
            <select asp-for="proveedor.genero" class="form-control">
                <option value="">Seleccione el genero</option>
                <option value="Femenino">Femenino</option>
                <option value="Masculino">Masculino</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="proveedor.nombreEmpresa">Empresa</label>
            <input type="text" class="form-control" asp-for="proveedor.nombreEmpresa">
        </div>
        <div class="form-group">
            <label asp-for="proveedor.servicioRealizado">Servicio realizado</label>
            <input type="text" class="form-control" asp-for="proveedor.servicioRealizado">
        </div>
        <button type="submit" class="btn btn-success">Guardar cambios</button>
    </form>
</div>